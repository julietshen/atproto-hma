{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist/pds",
    "rootDir": "./src/pds",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "lib": ["ES2020"],
    "types": ["node"],
    
    /* Relaxed Type Checking */
    "strict": false,
    "noImplicitAny": false
  },
  "include": ["src/pds/**/*"],
  "exclude": ["node_modules", "dist"]
} 