{
  "name": "perchpics",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node ./node_modules/vite/bin/vite.js",
    "build": "vite build",
    "preview": "vite preview",
    "pds": "node --max-old-space-size=2048 src/pds/server.js",
    "pds:debug": "node --max-old-space-size=2048 --trace-warnings src/pds/server.js 2>&1 | tee logs/pds/server.log",
    "start": "npm run dev & npm run pds",
    "start:debug": "npm run dev & npm run pds:debug",
    "start:clean": "node -e \"try { require('child_process').execSync('lsof -ti:$(grep FRONTEND_PORT .env | cut -d= -f2),$(grep PDS_PORT .env | cut -d= -f2) | xargs kill -9 2>/dev/null || true') } catch(e) {}\" && npm run start",
    "start:clean:debug": "node -e \"try { require('child_process').execSync('lsof -ti:$(grep FRONTEND_PORT .env | cut -d= -f2),$(grep PDS_PORT .env | cut -d= -f2) | xargs kill -9 2>/dev/null || true') } catch(e) {}\" && npm run start:debug",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "postinstall": "echo 'Note: Some deprecated packages are used by dependencies and cannot be removed.'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A simple photo sharing app built on the AT Protocol with its own custom Lexicon and PDS",
  "dependencies": {
    "@atproto/api": "^0.14.9",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.3.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "vite": "^6.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.3.1",
    "jsdom": "^24.0.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "typescript": "^5.8.2",
    "vitest": "^1.3.1"
  },
  "overrides": {
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "are-we-there-yet": "^4.0.1",
    "gauge": "^5.0.1",
    "npmlog": "^7.0.1",
    "inflight": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
