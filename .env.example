# AT Protocol HMA Integration - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/atproto_hma

# HMA Service Configuration
HMA_API_URL=http://localhost:5000
HMA_API_KEY=your_hma_api_key

# AT Protocol Configuration
AT_PROTOCOL_PDS_URL=http://localhost:2583
AT_PROTOCOL_API_KEY=your_at_protocol_api_key

# NCMEC Configuration (if applicable)
NCMEC_API_KEY=your_ncmec_api_key
NCMEC_ORGANIZATION_ID=your_organization_id

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/atproto-hma/service.log

# Service Configuration
PORT=3000
HOST=0.0.0.0
WORKERS=4

# Security Configuration
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Feature Flags
ENABLE_NCMEC_REPORTING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
HASH_CACHE_SIZE=1000 